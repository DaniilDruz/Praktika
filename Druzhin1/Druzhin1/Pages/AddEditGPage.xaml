<Page x:Class="Druzhin1.Pages.AddEditGPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Druzhin1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditGPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="GuardID" Margin="5" />
            <TextBox  x:Name="GuardID" Text="{Binding GuardID}" Margin="5"/>
            <TextBlock Text="FullName" Margin="5"/>
            <TextBox  Name="Marka1" Text="{Binding FullName}" Margin="5"/>
            <TextBlock Text="Position" Margin="5" />
            <TextBox  x:Name="model" Text="{Binding Position}" Margin="5"/>
            <TextBlock Text="Count" Margin="5" />
            <TextBox   Text="{Binding Count}" Margin="5"/>
            <TextBlock Text="TimeJob" Margin="5" />
            <TextBox   Text="{Binding TimeJob}" Margin="5"/>
            <TextBlock Text="PostID" Margin="5" />
            <TextBox  x:Name="nom" Text="{Binding PostID}" Margin="5"/>
            <Button x:Name="SaveBtn"  Content="Сохранить" Margin="5" Width="150" Height="30" Click="SaveBtn_Click"  />
            <Button x:Name="BackBtn"  Content="Назад" Margin="5" Width="150" Height="30" Click="BackBtn_Click" />
        </StackPanel>
    </Grid>
</Page>
